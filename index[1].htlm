<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pengunduh Video TikTok</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">

    <div class="bg-white p-8 rounded-xl shadow-lg text-center w-full max-w-md mx-4">
        <h1 class="text-2xl font-bold text-gray-800 mb-2">Pengunduh Video TikTok</h1>
        <p class="text-gray-500 mb-6">Tempel URL video TikTok di bawah ini dan klik unduh.</p>
        
        <div class="mb-4">
            <input type="text" id="tiktokUrl" placeholder="https://www.tiktok.com/@user/video/..." class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>
        
        <button id="downloadBtn" class="w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-md transition duration-200 flex items-center justify-center disabled:bg-blue-300">
            <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white hidden" id="spinner" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span id="buttonText">Unduh Video</span>
        </button>
        
        <p id="status" class="mt-4 text-gray-600 min-h-[24px]"></p>
    </div>

    <script>
        const downloadButton = document.getElementById('downloadBtn');
        const urlInput = document.getElementById('tiktokUrl');
        const statusText = document.getElementById('status');
        const buttonText = document.getElementById('buttonText');
        const spinner = document.getElementById('spinner');

        downloadButton.addEventListener('click', async () => {
            const tiktokUrl = urlInput.value.trim();
            if (!tiktokUrl) {
                statusText.textContent = 'Harap masukkan URL.';
                statusText.className = 'mt-4 text-yellow-600';
                return;
            }

            statusText.textContent = '';
            downloadButton.disabled = true;
            spinner.classList.remove('hidden');
            buttonText.textContent = 'Memproses...';

            try {
                const apiUrl = `/api/download?url=${encodeURIComponent(tiktokUrl)}`;
                const response = await fetch(apiUrl);
                if (!response.ok) {
                    const errorData = await response.json();
                    throw new Error(errorData.message || 'Gagal mengunduh video.');
                }
                const videoBlob = await response.blob();
                const objectUrl = URL.createObjectURL(videoBlob);
                const a = document.createElement('a');
                a.href = objectUrl;
                a.download = 'tiktok_video.mp4';
                document.body.appendChild(a);
                a.click();
                URL.revokeObjectURL(objectUrl);
                document.body.removeChild(a);
                statusText.textContent = '✅ Unduhan berhasil dimulai!';
                statusText.className = 'mt-4 text-green-600';
            } catch (error) {
                statusText.textContent = `❌ ${error.message}`;
                statusText.className = 'mt-4 text-red-600';
            } finally {
                downloadButton.disabled = false;
                spinner.classList.add('hidden');
                buttonText.textContent = 'Unduh Video';
            }
        });
    </script>
</body>
</html>
